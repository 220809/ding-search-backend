PUT user_v1
{
  "aliases": {
    "user": {}
  },
  "mappings": {
    "properties": {
      "id": {
        "type": "long"
      },
      "username": {
        "type": "text",
        "analyzer": "ik_max_word",
        "search_analyzer": "ik_smart",
        "fields": {
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        }
      },
      "gender": {
        "type": "integer"
      },
      "tags": {
        "type": "keyword"
      },
      "role": {
        "type": "integer"
      },
      "createTime": {
        "type": "date",
        "format": "yyyy-MM-dd HH:mm:ss||yyyy-MM-dd||epoch_millis"
      },
      "updateTime": {
        "type": "date",
        "format": "yyyy-MM-dd HH:mm:ss||yyyy-MM-dd||epoch_millis"
      },
      "deleted": {
        "type": "keyword"
      }
    }
  }
}

